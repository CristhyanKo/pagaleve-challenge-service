{
	"compilerOptions": {
		"target": "es5",
		"types": [
			"jest",
			"node"
		],
		"module": "commonjs",
		"lib": [
			"es5",
			"es6"
		],
		"baseUrl": "./",
		"moduleResolution": "node",
		"allowJs": true,
		"outDir": "./build",
		"rootDir": "./src",
		"strict": true,
		"sourceMap": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"removeComments": true,
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
	],
}