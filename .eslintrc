{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 13,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "eslint-plugin-import-helpers",
    "prettier"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended"
  ],
  "rules": {
    "no-constant-condition": "off",
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto",
        "semi": false,
        "jsxSingleQuote": true,
        "singleQuote": true,
        "useTabs": true,
        "tabWidth": 4,
        "printWidth": 150
      }
    ]
  }
}